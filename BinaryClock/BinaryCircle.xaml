<UserControl x:Class="BinaryClock.BinaryCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BinaryClock"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="40"
             d:DesignWidth="40"
             mc:Ignorable="d">
    <Grid>
        <Ellipse x:Name="CirOuter"
                 Width="40"
                 Height="40">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0.87" Color="#FFB8B8B8" />
                    <GradientStop Offset="0.95" Color="#FF858585" />
                    <GradientStop Color="#FF858585" />
                    <GradientStop Offset="0.2" Color="#FF858585" />
                    <GradientStop Offset="0.8" Color="#FF919191" />
                    <GradientStop Offset="0.903" Color="#FFA4A4A4" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="CirMid"
                 Width="30"
                 Height="30"
                 Fill="Black" />
    </Grid>
</UserControl>
